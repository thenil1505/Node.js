<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="book_style.css">
    <title>Book our tables</title>
</head>
<body>
    <h2>Book a table</h2>
    <div id="booking_list"></div>

    <table>
      <thead>
        <tr>
          <th>Table Number</th>
          <th>Table size</th>
          <th>Select</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(function(d) { %>
          <tr>
            <td><%= d.table_number %></td>
            <td><%= d.table_size %></td>
            <td><input type="checkbox"></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <br>
    

    <a href="/home" class="button_home">Home</a>

    <a href="/book_table" class="button">Book this table</a>

</body>
</html>